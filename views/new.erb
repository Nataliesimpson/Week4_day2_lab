<h1>Welcome to Porty Guesthouse. Book a room!</h1>

<form action="/booking" method="post">
  <label for="first_name">First Name:</label>
  <input type="text" name="first_name">
  <label for="last_name">Last Name:</label>
  <input type="text" name="last_name">
  <br>  

<label for="number_of_nights">Number of nights:</label>
<input type="number" name="number_of_nights">
<br>

<label for="breakfast">Do you require breakfast?:</label>
<select name="breakfast">
  <option value="Yes">Yes</option>
  <option value="No">No</option>
</select>
<br>

<label for="room_type">What kind of room would you like?:</label>
<select name="room_type">
  <option value="double">Double</option>
  <option value="single">Single</option>
  <option value="twin">Twin</option>
</select>

